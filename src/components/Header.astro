---
const currentPath = Astro.url.pathname;

const navLinks = [
  { href: '/docs/', label: 'Docs' },
  { href: '/download', label: 'Download' },
  { href: '/changes', label: 'Changes' },
  { href: '/blog/', label: 'Blog' },
  { href: 'https://play.bmb-lang.org', label: 'Playground', external: true },
];
---

<header class="header">
  <div class="header-inner">
    <a href="/" class="logo">
      <span class="logo-text">BMB</span>
      <span class="logo-sub">Bare-Metal-Banter</span>
    </a>

    <nav class="nav">
      {navLinks.map(link => (
        <a
          href={link.href}
          class:list={['nav-link', { active: currentPath.startsWith(link.href) }]}
          target={link.external ? '_blank' : undefined}
          rel={link.external ? 'noopener noreferrer' : undefined}
        >
          {link.label}
          {link.external && <span class="external-icon">â†—</span>}
        </a>
      ))}
    </nav>

    <div class="header-actions">
      <a
        href="https://github.com/lang-bmb/lang-bmb"
        class="github-link"
        target="_blank"
        rel="noopener noreferrer"
        aria-label="GitHub"
      >
        <svg width="24" height="24" viewBox="0 0 24 24" fill="currentColor">
          <path d="M12 0C5.37 0 0 5.37 0 12c0 5.31 3.435 9.795 8.205 11.385.6.105.825-.255.825-.57 0-.285-.015-1.23-.015-2.235-3.015.555-3.795-.735-4.035-1.41-.135-.345-.72-1.41-1.23-1.695-.42-.225-1.02-.78-.015-.795.945-.015 1.62.87 1.845 1.23 1.08 1.815 2.805 1.305 3.495.99.105-.78.42-1.305.765-1.605-2.67-.3-5.46-1.335-5.46-5.925 0-1.305.465-2.385 1.23-3.225-.12-.3-.54-1.53.12-3.18 0 0 1.005-.315 3.3 1.23.96-.27 1.98-.405 3-.405s2.04.135 3 .405c2.295-1.56 3.3-1.23 3.3-1.23.66 1.65.24 2.88.12 3.18.765.84 1.23 1.905 1.23 3.225 0 4.605-2.805 5.625-5.475 5.925.435.375.81 1.095.81 2.22 0 1.605-.015 2.895-.015 3.3 0 .315.225.69.825.57A12.02 12.02 0 0024 12c0-6.63-5.37-12-12-12z"/>
        </svg>
      </a>
    </div>
  </div>
</header>

<style>
  .header {
    background: var(--color-bg-primary);
    border-bottom: 1px solid var(--color-border);
    position: sticky;
    top: 0;
    z-index: 100;
  }

  .header-inner {
    max-width: 1200px;
    margin: 0 auto;
    padding: 0.75rem 1rem;
    display: flex;
    align-items: center;
    justify-content: space-between;
    gap: 2rem;
  }

  .logo {
    display: flex;
    align-items: baseline;
    gap: 0.5rem;
    text-decoration: none;
  }

  .logo-text {
    font-size: 1.5rem;
    font-weight: 700;
    color: var(--color-accent);
  }

  .logo-sub {
    font-size: 0.875rem;
    color: var(--color-text-muted);
    display: none;
  }

  @media (min-width: 640px) {
    .logo-sub {
      display: inline;
    }
  }

  .nav {
    display: flex;
    gap: 0.25rem;
  }

  .nav-link {
    padding: 0.5rem 0.75rem;
    color: var(--color-text);
    text-decoration: none;
    font-size: 0.9375rem;
    border-radius: 4px;
    transition: background 0.15s, color 0.15s;
  }

  .nav-link:hover {
    background: var(--color-bg-secondary);
    color: var(--color-accent);
  }

  .nav-link.active {
    color: var(--color-accent);
  }

  .external-icon {
    font-size: 0.75rem;
    margin-left: 0.25rem;
    opacity: 0.6;
  }

  .header-actions {
    display: flex;
    align-items: center;
    gap: 0.5rem;
  }

  .github-link {
    color: var(--color-text-muted);
    transition: color 0.15s;
    padding: 0.5rem;
    display: flex;
    align-items: center;
  }

  .github-link:hover {
    color: var(--color-text);
  }
</style>
