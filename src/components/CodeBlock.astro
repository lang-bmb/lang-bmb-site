---
interface Props {
  code: string;
  lang?: string;
  filename?: string;
}

const { code, lang = 'bmb', filename } = Astro.props;
---

<div class="code-block">
  {filename && (
    <div class="code-header">
      <span class="code-filename">{filename}</span>
    </div>
  )}
  <pre class={`language-${lang}`}><code>{code}</code></pre>
</div>

<style>
  .code-block {
    background: var(--color-bg-tertiary);
    border-radius: 8px;
    overflow: hidden;
    margin: 1rem 0;
  }

  .code-header {
    background: rgba(0, 0, 0, 0.2);
    padding: 0.5rem 1rem;
    border-bottom: 1px solid var(--color-border);
  }

  .code-filename {
    font-size: 0.8125rem;
    color: var(--color-text-muted);
    font-family: var(--font-mono);
  }

  pre {
    margin: 0;
    padding: 1rem;
    overflow-x: auto;
  }

  code {
    font-family: var(--font-mono);
    font-size: 0.875rem;
    line-height: 1.6;
    color: var(--color-text);
  }

  /* Basic BMB syntax highlighting */
  :global(.code-block .keyword) {
    color: #c586c0;
  }

  :global(.code-block .contract) {
    color: #dcdcaa;
    font-style: italic;
  }

  :global(.code-block .type) {
    color: #4ec9b0;
  }

  :global(.code-block .string) {
    color: #ce9178;
  }

  :global(.code-block .number) {
    color: #b5cea8;
  }

  :global(.code-block .comment) {
    color: #6a9955;
    font-style: italic;
  }
</style>
